<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contract_recurring_form_form" model="ir.ui.view">
        <field name="name">Contract form</field>
        <field name="model">contract</field>
        <field name="mode">primary</field>
        <field name="priority" eval="9999"/>
        <field name="arch" type="xml">
            <form string="Contract">
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'required': [('template', '=', False)]}</attribute>
            </field>
            <xpath expr="//div[@name='button_box']/.." position="before">
                <header>
                    <button
                        name="action_contract_send"
                        type="object"
                        string="Send by Email"
                        groups="base.group_user"
                        />
                </header>
            </xpath>
            <group name="main" position="after">
                <separator string="Recurring Invoices"
                           attrs="{'invisible': [('template','!=',True)]}"
                           />
                <div>
                    <field name="template" class="oe_inline"/>
                    <field name="create_invoice_visibility" invisible="1"/>
                    <label for="template" />
                    <button
                        name="recurring_create_invoice"
                        type="object"
                        attrs="{'invisible': ['|', ('template', '!=', True), ('create_invoice_visibility', '=', False)]}"
                        string="Create invoices"
                        class="oe_link"
                        groups="base.group_no_one"
                        />
                    <button
                        name="contract.act_template"
                        type="action"
                        attrs="{'invisible': [('template','!=',True)]}"
                        string="â‡’ Show recurring invoices"
                        class="oe_link"
                        />
                </div>
                <group col="4" attrs="{'invisible': [('template','!=',True)]}">
                    <field name="contract_template_id" colspan="4"/>
                    <field name="journal_id"
                           attrs="{'required': [('template', '=', True)]}"
                    />
                    <field name="pricelist_id"/>
                    <label for="recurring_interval"/>
                    <div>
                        <field name="recurring_interval"
                               class="oe_inline"
                               attrs="{'required': [('template', '=', True)]}"
                               />
                        <field name="recurring_rule_type"
                               class="oe_inline"
                               attrs="{'required': [('template', '=', True)]}"
                               />
                    </div>
                    <field name="recurring_invoicing_type"
                           attrs="{'required': [('template', '=', True)]}"
                    />
                    <field name="date_start"
                           attrs="{'required': [('template', '=', True)]}"
                    />
                    <field name="date_end"/>
                    <field name="recurring_next_date"
                           attrs="{'required': [('template', '=', True)]}"
                    />
                </group>
                <label for="recurring_invoice_line_ids"
                       attrs="{'invisible': [('template','=',False)]}"
                       />
                <div attrs="{'invisible': [('template','=',False)]}">
                    <field name="recurring_invoice_line_ids">
                        <tree string="Account Analytic Lines" editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="price_unit"/>
                            <field name="discount" groups="sale.group_discount_per_so_line" />
                            <field name="price_subtotal"/>
                        </tree>
                    </field>
                </div>
                <group
                    string="Legend (for the markers inside invoice lines description)"
                    name="group_legend"
                    attrs="{'invisible': [('template','!=',True)]}"
                    >
                    <p colspan="2">
                        <strong>#START#</strong>: Start date of the invoiced period</p>
                    <p colspan="2">
                        <strong>#END#</strong>: End date of the invoiced period</p>
                </group>
            </group>
        </form>
        </field>
    </record>

    <!-- Inherited Analytic Account list for contracts -->
    <record id="view_contract_journal_tree" model="ir.ui.view">
        <field name="name">Contract list</field>
        <field name="model">contract</field>
        <field name="inherit_id" ref="analytic.view_contract_list" />
        <field name="mode">primary</field>
        <field name="priority" eval="9999"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="journal_id" groups="account.group_account_user"/>
            </field>
            <field name="partner_id" position="after">
                <field name="recurring_next_date" invisible="not context.get('is_contract', False)"/>
            </field>
        </field>
    </record>

    <!-- Analytic Account search view for contract -->
    <record id="view_contract_contract_search" model="ir.ui.view">
        <field name="name">Contract search</field>
        <field name="model">contract</field>
        <field name="inherit_id" ref="analytic.view_contract_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" position="after">
                    <!-- Use other field because partner_id already used -->
                    <field name="company_id" filter_domain="[('partner_id', 'child_of', self)]"
                           string="Partner and dependents"/>
                </field>
                <field name="journal_id"/>
                <field name="pricelist_id"/>
                <separator/>
                <filter name="template"
                        string="Recurring Invoices"
                        domain="[('template','=',True)]"
                        />
                <separator/>
                <filter name="not_finished"
                        string="Valid"
                        domain="['|', ('date_end', '=', False), ('date_end', '&gt;=', time.strftime('%Y-%m-%d'))]"
                        />
                <filter name="finished"
                        string="Finished"
                        domain="[('date_end', '&lt;', time.strftime('%Y-%m-%d'))]"
                        />
                <group expand="0" string="Group By...">
                    <filter string="Next Invoice"
                            domain="[]"
                            context="{'group_by':'recurring_next_date'}"
                            />
                    <filter string="Date End"
                            domain="[]"
                            context="{'group_by':'date_end'}"
                            />
                </group>
            </field>
        </field>
    </record>

    <!-- Action Sales/Sales/Contracts -->
    <record id="action_contract_overdue_all" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contract</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'is_contract':1, 'search_default_not_finished':1, 'search_default_template':1, 'default_template': 1}</field>
        <field name="search_view_id" ref="analytic.view_contract_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new contract.
            </p>
        </field>
    </record>

    <record id="action_contract_overdue_all_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_contract_journal_tree"/>
        <field name="act_window_id" ref="action_contract_overdue_all"/>
    </record>

    <record id="action_contract_overdue_all_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="contract_recurring_form_form"/>
        <field name="act_window_id" ref="action_contract_overdue_all"/>
    </record>

    <menuitem id="menu_action_contract_overdue_all"
              parent="account.menu_finance_receivables"
              action="action_contract_overdue_all"
              sequence="99"
              />

    <menuitem id="menu_config_contract"
              name="Contracts"
              sequence="1"
              parent="account.menu_finance_configuration"
              />

    <menuitem id="contract_contract_menu"
              parent="menu_config_contract"
              action="contract_contract_action"
              sequence="1"
              />

</odoo>
